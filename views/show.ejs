<% layout("/layouts/boilerplate") %>

  <div class="row">
    <div class="col-8 offset-3">
      <h3>
        <%= listing.title %>
      </h3>

      <div class="card col-6 offset-1 show-card listing-card">
        <img class="card-img-top show-img" src="<%=listing.image%>" alt="Card image cap">
        <div class="card-body">
          <p class="card-text">
            <%= listing.description %>
              <br>
              &#8377;<%= listing.price%>
                <br>
                <%= listing.location %>
                  <br>
                  <%= listing.country %>
          </p>
        </div>
      </div>
    </div>
  </div>
  <br />
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-4 add-edit">Edit</a>
    <br /><br />
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-dark  offset-3 add-edit">Delete</button>


    </form>
  </div>

  <hr>

  <div class="col-8 offset-3 mb-3">
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" id="rating" min="1" max="5" class="form-range" name="review[rating]">
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback"> Please submit some valid comment for review.</div>
      </div>
      <button class="btn btn-outline-dark" class="mb-3 mt-3">Submit</button>
    </form>

    <hr>
    <P><b>All Reviews</b></P>

    <div class="row">
      <%for(review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3 ">
          <div class="card-body">
            <h5 class="card-title">Jae Don</h5>

            <p class="card-text">
              <%= review.comment %>
            </p>
            <p class="card-text">
              <%= review.rating %>Star
            </p>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST"
              class="mb-3 ms-3">
              <button class=" btn btn-sm btn-dark">Delete</button>
            </form>

          </div>
        </div>

        <% } %>
    </div>




  </div>